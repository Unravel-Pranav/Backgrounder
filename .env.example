# === LinkedIn Provider Selection ===
# One of: serpapi, playwright, proxycurl, rapidapi
LINKEDIN_PROVIDER=serpapi

# === SerpAPI (required for serpapi provider + Google/News search) ===
SERPAPI_API_KEY=

# === Playwright / Manual Scraping ===
# LinkedIn credentials for authenticated scraping (optional but recommended)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=
PLAYWRIGHT_HEADLESS=true

# === Proxycurl (only if using proxycurl provider) ===
PROXYCURL_API_KEY=

# === RapidAPI (only if using rapidapi provider) ===
RAPIDAPI_KEY=
RAPIDAPI_HOST=linkedin-data-api.p.rapidapi.com

# === NVIDIA AI API (required for report generation) ===
NVIDIA_API_KEY=
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=meta/llama-3.1-70b-instruct

# === ImgBB (for reverse photo search â€” free at https://api.imgbb.com/) ===
IMGBB_API_KEY=

# === General ===
MAX_CONCURRENCY=5
REQUEST_TIMEOUT=30
